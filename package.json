{
    "name": "class-mongo",
    "description": "Mongo storage for class entities",
    "author": {
        "name": "Alexander Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "0.2.88",
    "main": "./lib/class-mongo.js",
    "types": "./lib/class-mongo.d.ts",
    "repository": {
        "type": "git",
        "url": "git://github.com/atmajs/class-mongo.git"
    },
    "devDependencies": {
        "@types/sinon": "^2.3.3",
        "app-bundler": "0.0.75",
        "atma": "^0.12.20",
        "atma-loader-ts": "^1.1.12",
        "dts-bundle": "^0.7.3"
    },
    "scripts": {
        "test": "atma test",
        "build": "app-bundler && npm run build-dts",
        "watch": "app-bundler --watch",
        "server": "atma server",
        "build-dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "release": "echo \"Run atma pub -m \"message\"\""
    },
    "license": "MIT",
    "app-bundler": {
        "file": "src/export.ts",
        "outputMain": "lib/class-mongo.js",
        "package": {
            "module": "commonjs",
            "moduleName": "class-mongo",
            "moduleWrapper": "umd",
            "commonjs": {
                "output": "simplified"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        },
        "dynamicDependencies": [
            "^mongodb",
            "^atma-utils",
            "^class-json"
        ]
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "atma-loader-ts": {
                "typescript": {
                    "compilerOptions": {
                        "target": "es3",
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "CommonJS"
                        }
                    }
                }
            }
        }
    },
    "dependencies": {
        "@types/mongodb": "^3.5.14",
        "atma-utils": "^0.1.37",
        "class-json": "^0.2.99",
        "mongodb": "^3.5.6"
    },
    "peerDependencies": {
        "class-json": "^0.2.69"
    }
}
